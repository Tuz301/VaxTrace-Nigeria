{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:3000",
        "http://localhost:3000/dashboard",
        "http://localhost:3000/inventory",
        "http://localhost:3000/settings"
      ],
      "numberOfRuns": 3,
      "startServerCommand": "npm run dev",
      "startServerReadyPattern": "ready on",
      "startServerReadyTimeout": 120000
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.9 }],
        "categories:accessibility": ["error", { "minScore": 0.95 }],
        "categories:best-practices": ["error", { "minScore": 0.9 }],
        "categories:seo": ["warn", { "minScore": 0.8 }],
        "first-contentful-paint": ["error", { "maxNumericValue": 2000 }],
        "interactive": ["error", { "maxNumericValue": 5000 }],
        "speed-index": ["error", { "maxNumericValue": 3400 }],
        "total-blocking-time": ["error", { "maxNumericValue": 300 }],
        "largest-contentful-paint": ["error", { "maxNumericValue": 2500 }],
        "cumulative-layout-shift": ["error", { "maxNumericValue": 0.1 }],
        "resource-summary": {
          "script": ["warn", { "maxSize": 300000 }],
          "stylesheet": ["warn", { "maxSize": 100000 }],
          "document": ["warn", { "maxSize": 20000 }],
          "total": ["warn", { "maxSize": 1000000 }],
          "image": ["warn", { "maxSize": 200000 }],
          "font": ["warn", { "maxSize": 100000 }]
        },
        "unused-javascript": ["warn", { "maxLength": 0 }],
        "unused-css-rules": ["warn", { "maxLength": 0 }],
        "modern-image-formats": ["warn", { "maxLength": 0 }],
        "offscreen-images": ["warn", { "maxLength": 5 }],
        "render-blocking-resources": ["warn", { "maxLength": 0 }],
        "unminified-css": ["warn", { "maxLength": 0 }],
        "unminified-javascript": ["warn", { "maxLength": 0 }],
        "no-document-write": "warn",
        "uses-http2": "warn"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
